<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p><span data-controller="typed-js"></span></p>
  </div>
</div>
<div class="container mt-5">
<h2>My lists (<%= @lists.size %>)</h2>
<div class="row">

<% @lists.each do |list| %>
  <div class="col-md-6 col-lg-4 mb-4">
<% if list.photo.attached? %>
    <%= link_to list_path(list), class: "no-text-decoration" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
        <%= list.name %>
      </div>
      <% end %>
    <% end %>
  </div>
<% end %>
